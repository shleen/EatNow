<div class='row px-3 mt-5'>
  <div class='col-12'>
    <div class='text-muted text-center'>Current URL</div>
    <h4 class='text-center mb-4'><%= @r.url %></h4>

    <%= form_for @r, url: robob_path, method: :patch do |f| %>
      <div class='form-group'>
        <label>New URL</label>
        <%= f.text_field :url, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.submit 'Update', class: 'btn btn-secondary w-100' %>
      </div>
    <% end %>
  </div>
</div>
