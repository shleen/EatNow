<div class='orders'>
  <div class='row'>
    <% @order_items.each do |o| %>
      <div class='col-10 col-md-4 offset-1'>
        <div class='order-container jumbotron mt-3 mb-0'>
          <% o.each do |oi| %>
            <div class='order-item card my-3'>
              <div class='card-body'>
                <span class='card-text'><%= oi.menu_item.name %> <b>x <%= oi.qty %></b></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
