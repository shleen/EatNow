<div class='container mt-3'>
  <h4>Add Menu Item</h4>
  <%= form_for @mi, url: menu_item_index_path, method: :post do |f| %>
    <div class='form-group'>
      <label>Item name</label>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <label>Price</label>
      <%= f.text_field :price, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <label>Average waiting time (minutes)</label>
      <%= f.number_field :waiting_time, min: '0', class: 'form-control' %>
    </div>

    <div class='form-group'>
      <label>Item Type</label>
      <%= f.select :type, options_for_select(@mi_types), {}, class: 'form-control' %>
    </div>

    <div class='form-group custom-control custom-checkbox mt-4'>
      <%= f.check_box :vegetarian, class: 'custom-control-input', id: 'vegetarian' %>
      <label class='custom-control-label' for='vegetarian'>Vegetarian</label>
    </div>

    <div class='form-group mt-3'>
        <%= f.submit "Add", class: 'btn btn-secondary w-100' %>
    </div>
  <% end %>
</div>
